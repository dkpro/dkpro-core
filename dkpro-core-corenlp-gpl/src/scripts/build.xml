          tool="depparser" 
          language="en" 
          variant="ptb-conll" 
          extension="gz">     
        <metadata>
          <entry key="pos.tagset" value="ptb"/>
          <entry key="dependency.tagset" value="conll"/>
        </metadata>
      </install-stub-and-upstream-file>       
      <deltree dir="target/download/tmp"/>
    </target>
        

