            upstreamVersion="20150728"
            metaDataVersion="1"
            tool="morph" 
            language="hu"
            variant="szeged" 
            extension="par">
            <metadata>
            	<!--
                The Hungarian parameter file was trained on the Szeged treebank 2.0
