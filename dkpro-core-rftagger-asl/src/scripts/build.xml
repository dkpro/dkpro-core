			src="target/download/20130430-windows-x86_64.tar.gz"
			dest="target/download/20130430-windows-x86_64.tar"/>
		<untar 
			src="target/download/20130430-windows-x86_64.tar"
			dest="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64">
			<patternset>
				<include name="*/*" />
			</patternset>
			<mapper type="flatten" />
		</untar>
    <move 
       file="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/rft-annotate.exe"
       tofile="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/rft-annotate"/>
    <move 
       file="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/rft-train.exe"
       tofile="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/rft-train"/>
        <move 
           file="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/rft-print.exe"
           tofile="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/rft-print"/>
		<delete dir="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/windows-x86_64"/>
		<propertyfile
		    file="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/manifest.properties">
			<entry  key="rft-annotate" value="executable"/>
			<entry  key="rft-train" value="executable"/>
			<entry  key="rft-print" value="executable"/>
		</propertyfile>

		<echo file="target/model-staging/de/tudarmstadt/ukp/dkpro/core/rftagger/bin/windows-x86_64/README">
			rf tagger version 2013-04-30
		</echo>

